<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="@color/primary" />
            <padding android:bottom="@dimen/buttone_raius" android:left="@dimen/buttone_raius" android:right="@dimen/buttone_raius" android:top="@dimen/buttone_raius" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="@color/accent" />
            <padding android:bottom="@dimen/buttone_raius" android:left="@dimen/buttone_raius" android:right="@dimen/buttone_raius" android:top="@dimen/buttone_raius" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <stroke android:width="1dp" android:color="@color/accent" />
            <solid android:color="@color/abc_background_cache_hint_selector_material_light"></solid>
            <padding android:bottom="@dimen/buttone_raius" android:left="@dimen/buttone_raius" android:right="@dimen/buttone_raius" android:top="@dimen/buttone_raius" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="@color/link_text_material_dark" />
            <padding android:bottom="@dimen/buttone_raius" android:left="@dimen/buttone_raius" android:right="@dimen/buttone_raius" android:top="@dimen/buttone_raius" />
        </shape>
    </item>
</selector>