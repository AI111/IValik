<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:translationZ="3dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@android:drawable/divider_horizontal_dim_dark"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.12"
                android:text="19:20"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/secondary_text"
                android:textIsSelectable="true"
                android:textSize="40dp" />

            <ToggleButton
                android:id="@+id/UP_DOWN"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/tougle_button"
                android:text=""
                android:textOff=""
                android:textOn="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Calendar_feeld"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:gravity="fill_horizontal|center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">

            <ToggleButton
                android:id="@+id/toggleButton1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/custom_button"
                android:gravity="center_vertical|center_horizontal"
                android:text="New ToggleButton2"
                android:textOff="@string/Monday"
                android:textOn="@string/Monday"
                android:translationZ="0dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></View>

            <ToggleButton
                android:id="@+id/toggleButton2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/custom_button"
                android:gravity="center_vertical|center_horizontal"
                android:text="New ToggleButton2"
                android:textOff="@string/Tuesday"
                android:textOn="@string/Tuesday"
                android:translationZ="3dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></View>

            <ToggleButton
                android:id="@+id/toggleButton3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/custom_button"
                android:gravity="center_vertical|center_horizontal"
                android:text="New ToggleButton1"
                android:textOff="@string/Wednesday"
                android:textOn="@string/Wednesday"
                android:translationZ="4dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></View>

            <ToggleButton
                android:id="@+id/toggleButton4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/custom_button"
                android:gravity="center_vertical|center_horizontal"
                android:text="New ToggleButton3"
                android:textOff="@string/Thursday"
                android:textOn="@string/Thursday" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></View>

            <ToggleButton
                android:id="@+id/toggleButton6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/custom_button"
                android:gravity="center_vertical|center_horizontal"
                android:text="New ToggleButton"
                android:textOff="@string/Friday"
                android:textOn="@string/Friday" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></View>

            <ToggleButton
                android:id="@+id/toggleButton7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/custom_button"
                android:gravity="center_vertical|center_horizontal"
                android:text="New ToggleButton"
                android:textOff="@string/Saturday"
                android:textOn="@string/Saturday" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></View>

            <ToggleButton
                android:id="@+id/toggleButton8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/custom_button"
                android:gravity="center_vertical|center_horizontal"
                android:text="New ToggleButton"
                android:textOff="@string/Sunday"
                android:textOn="@string/Sunday" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
